#this is the kv design file
WindowManager:
<WindowManager>
    id: window_manager
    StartScreen
    LogInScreen
    SignUpScreen
    HomeScreen
    NavigationScreen
    InputScreen
    HistoryScreen
    CameraScreen
    PostCameraScreen
    ManualInputScreen
    SettingScreen
<Graph>

    
<StartScreen>
    name: "start"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "SilverWallets"
            color: 0,0,0,1
            size_hint: 1, .2
            font_name: "ProductSansBold"
            font_size: 50
            
        BoxLayout:
            orientation: "vertical"
            spacing: 50
            padding: 100
            Button:
                background_normal: ''
                background_color: 0.85, 0.85, 0.85, .85
                text: "Sign Up"
                color: 0,0,0,1
                font_name: "ProductSansBold"
                id: signUp
                on_release: 
                    app.root.current = "signup"
                    root.manager.transition.direction = "left"
            Button: 
                background_normal: ''
                background_color: 0.85, 0.85, 0.85, .85
                text: "Log In"
                color: 0,0,0,1
                font_name: "ProductSansBold"
                id: logIn
                on_release: 
                    app.root.current = "login"
                    root.manager.transition.direction = "left"
<LogInScreen>
    name: "login"
    FloatLayout:
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Log In"
                color: 0,0,1,1
                font_name: "ProductSansBold"
            TextInput:
                id: email
                hint_text: "Enter email"
                font_name: "ProductSans"
                multiline: False
                on_text_validate: root.on_text_validate_email(self)
            TextInput:
                id: pw
                hint_text: "Enter password"
                font_name: "ProductSans"
                multiline: False
                on_text_validate: root.on_text_validate_pw(self)
            Label:
                text: root.status_info
                color: 0.5,0,0,1
                size_hint: 1, 0.23
                font_name: "ProductSansBold"
            Button:
                text: "CONFIRM"
                font_name: "ProductSansBold"
                color: 0,0,0,1     
                background_normal: ''
                background_color: 0.21, 0.65, 0.3, .85
                on_press: 
                    root.signup_to_firebase()
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            Button:
                text: "Go Back"
                font_name: "ProductSansBold"
                size_hint: .15, .05
                
                on_release: 
                    app.root.current = "start"
                    root.manager.transition.direction = "right"
<SignUpScreen>
    name: "signup"
    FloatLayout:
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Sign Up"
                color: 1,0,1,1
                font_name: "ProductSansBold"
            TextInput:
                id: email
                hint_text: "Enter email"
                font_name: "ProductSans"
                multiline: False
                on_text_validate: root.on_text_validate_email(self)
            TextInput:
                id: pw
                hint_text: "Enter password"
                font_name: "ProductSans"
                multiline: False
                on_text_validate: root.on_text_validate_pw(self)
            Label:
                text: "Average monthly income"
                color: 0,0,0,1
                size_hint: 1,0.23
                font_name: "ProductSansBold"
            TextInput:
                id: limit
                hint_text: "Enter amount in SGD"
                font_name: "ProductSans"
                multiline: False
                input_filter: "float"
                on_text_validate: root.on_text_validate_target(self) 
            Label:
                text: root.status_info
                color: 0.5,0,0,1
                size_hint: 1, 0.23
                font_name: "ProductSansBold"
            Button:

                text: "CONFIRM"
                font_name: "ProductSansBold"
                color: 0,0,0,1     
                background_normal: ''
                background_color: 0.21, 0.65, 0.3, .85
                on_press: 
                    root.signup_to_firebase()
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            Button:
                text: "Go Back"
                font_name: "ProductSansBold"
                size_hint: .15, .05
                on_release: 
                    app.root.current = "start"
                    root.manager.transition.direction = "right"
<HomeScreen>
    name: "home"
    BoxLayout:
        orientation: "vertical"
        Graph
        Label:
            text: "Tips"
            color: 0,0,0.7,1
            size_hint: None, 0.2
            font_name: "ProductSansBold"

    FloatLayout:

        AnchorLayout:
            
            anchor_x: 'left'
            anchor_y: 'top'
            Label:
                size_hint: .35, .05
                text: root.welcome_text
                text_size: cm(3), cm(3)
                font_size: "45"
                color: 0, 0, 0.3, 1
                font_name: "ProductSansBold"

        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            Button:
                text: "Settings"
                font_name: "ProductSansBold"
                size_hint: .35, .05
                on_press:
                    app.root.current = "setting"
                    app.root.transition.direction = "left"
<NavigationScreen>
    
    name: "navigate"
    MDBottomNavigation:
        id: bottom_nav
        MDBottomNavigationItem:
            name: 'input'
            text: "Input"
            InputScreen

        MDBottomNavigationItem:
            
            name: 'home'
            text: "Home"
            HomeScreen
        MDBottomNavigationItem:
            name: 'history'
            text: "History"
            HistoryScreen
<CameraScreen>
    name: "camera"
    on_enter: camera.play = not camera.play
    BoxLayout:
        orientation: "vertical"
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            Button:
                text: "back"
                font_name: "ProductSansBold"
                size_hint: 0.3, 0.1
                on_press: 
                    camera.play = not camera.play
                    app.root.current = "navigate"
                    root.manager.transition.direction = "right"
        Camera:
            id: camera
            resolution: (1280, 720)
            play: False
        Label:
            text: root.status_info
            color: 0,0,0,1
            font_name: "ProductSansBold"
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            Button:
                text: "capture"
                font_name: "ProductSansBold"
                on_press: 
                    root.capture()
                    
                size_hint: 0.5, 0.2
                

<InputScreen>
    name: "input"
    BoxLayout:
        orientation: "vertical"
        Label: 
            text: "Input Data"
            font_name: "ProductSans"
            color: 0.1, 0.1, 0.7,1
            font_name: "ProductSansBold"
        BoxLayout:
            
            orientation: "horizontal"
            Button:
                text: "Enter Manually"
                font_name: "ProductSansBold"
                on_press:
                    app.root.current = "manual"
                    app.root.transition.direction = "left"
                
            Button: 
                text: "Scan Receipt"
                font_name: "ProductSansBold"
                on_press: 
                    app.root.current = "camera"
                    app.root.transition.direction = "left"

<ManualInputScreen>
    name: "manual"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Manual Input"
            color: 0.2,0.5,0.3,1
            font_name: "ProductSansBold"
        TextInput:
            id: amt
            hint_text: "Enter your expenditure (SGD)"
            font_name: "ProductSans"
            multiline: False
            on_text_validate: root.text_field_amount(self)
            size_hint: 1, 0.4
            input_filter: "float"
        BoxLayout:
            size_hint: 1, 0.22
            Button:
                text: "pick date"
                font_name: "ProductSans"
                on_press: root.showDatePicker()
            Label:
                text: root.date_label
                color: 0.3, 0.3, 0.3, 1
                font_name: "ProductSansBold"
        GridLayout:
            cols: 3
            rows: 2
            Button:
                text: "Water Bill"
                font_name: "ProductSansBold"
                background_normal: ''
                background_color: 0.15, 0.47, 0.9, .85
                on_press: 
                    root.tag = "water"
                    root.onButtonClicked()
                    self.background_color: (0.15, 0.47, 0.9, .85)

            Button:
                id: elec
                text: "Electric Bill"
                font_name: "ProductSansBold"
                background_normal: ''
                background_color: 0.96, 0.8, 0.15, .85
                on_press: root.tag = "electric"
            Button:
                text: "Essentials"
                font_name: "ProductSansBold"
                background_normal: ''
                background_color: 0.67, 0.8, 0.69, .85
                on_press: root.tag = "essentials"
            Button:
                text: "Rent"
                font_name: "ProductSansBold"
                background_normal: ''
                background_color: 0.93, 0.32, 0.32, .85
                on_press: root.tag = "rent"
            Button:
                text: "Food"
                font_name: "ProductSansBold"
                background_normal: ''
                background_color: 0.9, 0.65, 0.35, .85
                on_press: root.tag = "food"
            Button:
                text: "Extras"
                font_name: "ProductSansBold"
                background_normal: ''
                background_color: 0.3, 0.2, 0.7, .85
                on_press: root.tag = "extras"

        Label:
            text: root.status_info
            size_hint: 1, 0.23
            color: 0.2,0.2,0,1
            font_name: "ProductSansBold"
        Button:
            text: "Submit"
            font_name: "ProductSansBold"
            background_normal: ''
            background_color: 0.3, 0.9, 0.1, .85
            on_press: root.submitData()
    

    FloatLayout:
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            Button:
                text: "back"
                font_name: "ProductSansBold"
                size_hint:0.3, 0.05
                on_press:
                    app.root.current = "navigate"
                    root.manager.transition.direction = "right"
<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<RV>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True
<History>
    
    viewclass: 'SelectableLabel'  # defines the viewtype for the data items.
    orientation: "vertical"
    spacing: 40
    padding:10, 10
    space_x: self.size[0]

    SelectableRecycleBoxLayout:
        color:(0, 0.7, 0.4, 0.8)
        default_size: None, dp(56)
        default_size_hint: 1, None 
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical' 
        multiselect: True
        touch_multiselect: True

        
<HistoryScreen>
    FloatLayout:
        History
        AnchorLayout
            anchor_y: 'bottom'
            size_hint: 1, .1
            Button:
                text: 'REMOVE'
                on_press: root.remove()
                font_name: "ProductSansBold"
                background_normal: ''
                background_color: 1, 0.1, 0.1, .85

    

