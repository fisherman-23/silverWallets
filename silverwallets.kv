<SettingScreen>
    name: "setting"
    FloatLayout:
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            
            Button:
                text: "back"
                font_name: "ProductSansBold"
                size_hint: .15, .05
                on_press: 
                    app.root.current = "navigate"
                    root.manager.transition.direction = "right"
        BoxLayout:
            spacing: 90
            padding: 150
            orientation: "vertical"
            Button:
                background_normal: ''
                background_color: 0.81, 0.81, 0.81, .85
                text: "Log Out"
                on_press: root.log_out()
                font_name: "ProductSansBold"
                color: 1,0.1,0.1,1
                size_hint: 1, .2
            BoxLayout:
                size_hint:1,.2
                TextInput:
                    id: income
                    multiline: False
                    hint_text: 'Enter updated income'
                    font_name: "ProductSans"
                    input_filter: "float"
                    on_text_validate: root.income(self)
                Button:
                    background_normal: ''
                    background_color: 0.1, 1, 0.1, .85
                    text: "Update"
                    font_name: "ProductSansBold"
                    on_press: root.update()
            Button:
                background_normal: ''
                background_color: 0.81, 0.81, 0.81, .85
